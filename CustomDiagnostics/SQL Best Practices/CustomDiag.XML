<?xml version="1.0" standalone="yes"?>
<CustomTasks>
  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="NTFS Compression Check" type="Utility" point="Startup" wait="OnlyOnShutdown" cmd="NTFS_Compression_Check.cmd &quot;%ssbatchrunner%&quot; %server% %server_instance% &quot;%instance%&quot; &quot;%output_path%&quot; %authmode% %ssuser% %sspwd%  &gt; &quot;%output_name%.TXT&quot; 2&gt;&amp;1" />
  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="Hypothetical Indexes Check" type="TSQL_Script" point="Startup" wait="OnlyOnShutdown" cmd="Hind_Indexes_Check.sql" />
  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="Pinned Table Check" type="TSQL_Script" point="Startup" wait="OnlyOnShutdown" cmd="Pinned_Table_Check.sql" />
  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="BOOT.INI" type="Utility" point="Startup" wait="OnlyOnShutdown" cmd="type %SYSTEMDRIVE%\BOOT.INI &gt; &quot;%output_path%%COMPUTERNAME%_BOOT.INI&quot;" />
  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="BOOTCFG" type="Utility" point="Startup" wait="OnlyOnShutdown" cmd="BOOTCFG.EXE &gt; &quot;%output_path%%COMPUTERNAME%_BOOTCFG.TXT&quot;" />
