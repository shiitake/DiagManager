  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="ImageFileExecOp" type="Utility" point="Startup" wait="OnlyOnShutdown" cmd="regedit /s /a &quot;%output_path%%COMPUTERNAME%_SQL_Best_Practices_IMAGE_FILE_EXEC_OP.REG&quot;       &quot;HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Windows NT\CurrentVersion\Image File Execution Options&quot; &gt; NUL 2&gt;&amp;1" />
  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="ImageFileExecOpWOW64" type="Utility" point="Startup" wait="OnlyOnShutdown" cmd="regedit /s /a &quot;%output_path%%COMPUTERNAME%_SQL_Best_Practices_IMAGE_FILE_EXEC_OP_WOW64.REG&quot; &quot;HKEY_LOCAL_MACHINE\SOFTWARE\Wow6432Node\Microsoft\Windows NT\CurrentVersion\Image File Execution Options&quot; &gt; NUL 2&gt;&amp;1" />
  <CustomTask enabled="true" groupname="SQL Best Practices" taskname="McAfeeBufferOverrunRegKey" type="Utility" point="Startup" wait="OnlyOnShutdown" cmd="regedit /s /a &quot;%output_path%%COMPUTERNAME%_SQL_Best_Practices_McAfeeBufferOverrunEntercept.REG&quot; &quot;HKEY_LOCAL_MACHINE\SOFTWARE\Network Associates\TVD\Shared Components\On Access Scanner\BehaviourBlocking&quot; &gt; NUL 2&gt;&amp;1" />
